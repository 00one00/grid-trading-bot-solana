# Solana Grid Trading Bot Configuration
# =====================================
# Copy this file to .env and fill in your actual values

# Wallet Configuration (for DEX trading)
# =====================================
# Wallet types: 'software', 'ledger', 'trezor'
WALLET_TYPE=software
PRIVATE_KEY=your_private_key_here
HARDWARE_DERIVATION_PATH=44'/501'/0'/0'
RPC_URL=https://api.mainnet-beta.solana.com

# API Configuration (for centralized exchanges - optional)
# ======================================================
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
BASE_URL=https://api.goodcrypto.app

# Trading Parameters
# ==================
TRADING_PAIR=SOL/USDC
CAPITAL=250.0
GRID_LEVELS=5
PRICE_RANGE_PERCENT=0.10
RISK_PER_TRADE=0.02

# Micro-Grid Strategy Configuration
# =================================
MICRO_GRID_MODE=True
ADAPTIVE_SPACING=True
MIN_GRID_SPACING=0.005
MAX_GRID_SPACING=0.03
VOLATILITY_LOOKBACK=24
SMALL_CAPITAL_THRESHOLD=1000
MICRO_CAPITAL_THRESHOLD=500
GRID_DENSITY_MULTIPLIER=2.0

# Risk Management
# ===============
MAX_DAILY_LOSS=0.05
STOP_LOSS_PERCENT=0.05
PROFIT_TARGET_PERCENT=0.02

# Dynamic Position Sizing (P2)
# =============================
DYNAMIC_SIZING=True
MIN_RISK_PER_TRADE=0.01
MAX_RISK_PER_TRADE=0.05
PERFORMANCE_SCALING=True
COMPOUND_PROFITS=True
WIN_RATE_THRESHOLD_HIGH=0.7
WIN_RATE_THRESHOLD_LOW=0.5
RISK_SCALING_FACTOR=1.5
SMALL_ACCOUNT_BOOST=1.2

# Performance Settings
# ====================
CHECK_INTERVAL=60
RETRY_DELAY=300
MAX_RETRIES=3

# Logging
# =======
LOG_LEVEL=INFO
LOG_FILE=trading_bot.log

# Security (Optional)
# ===================
# ENCRYPTION_KEY=your_encryption_key_here
# IP_WHITELIST=192.168.1.100,10.0.0.50

# Advanced Settings (Optional)
# ============================
# VOLATILITY_MULTIPLIER=1.0
# MIN_POSITION_SIZE=1.0
# MAX_EXPOSURE_PERCENT=0.8 